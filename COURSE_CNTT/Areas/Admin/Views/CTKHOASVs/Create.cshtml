@model COURSE_CNTT.Models.IE.CTKHOASV

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"> <i class="fas fa-bars"></i> </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home/index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/CTKHOASVs" class="nav-link">Danh sách học phần</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/CTKHOASVs/Create" class="nav-link">Thêm học phần mới</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới lộ trình khóa học</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="card-body">
                            <div class="tab-content">

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Khóa học</label>
                                    @Html.DropDownListFor(x => x.MACOURSE, ViewBag.MACOURSE as SelectList, "-Chọn học phần-", new { @class = "form-control", @placeholder = "Khóa học" })
                                    @Html.ValidationMessageFor(x => x.MACOURSE, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Khóa năm học:</label>
                                    @Html.DropDownListFor(x => x.MaHP, ViewBag.MaHP as SelectList, "-Chọn khóa học phần-", new { @class = "form-control", @placeholder = "Khóa học" })
                                    @Html.ValidationMessageFor(x => x.MaHP, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tín chỉ</label>
                                    @Html.TextBoxFor(x => x.Tinchi, new { @class = "form-control", @placeholder = "Tín chỉ" })
                                    @Html.ValidationMessageFor(x => x.Tinchi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Học kì</label>
                                    @Html.TextBoxFor(x => x.Hocki, new { @class = "form-control", @placeholder = "Học kì" })
                                    @Html.ValidationMessageFor(x => x.Hocki, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Mã HP tiên quyết</label>
                                    @Html.TextBoxFor(x => x.MaHPHoctruoc, new { @class = "form-control", @placeholder = "Mã khóa học trước" })
                                    @Html.ValidationMessageFor(x => x.MaHPHoctruoc, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Thêm mới</button>
                                <a href="/admin/CTKHOASVs" class="btn btn-danger">Quay lại</a>
                            </div>
                        </div>

                    }
                </div>

            </div>
            <!-- /.card -->
        </div>
    </div>

</section>
<!-- /.content -->
